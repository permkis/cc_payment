{% extends 'base.html.twig' %}

{% block title %}Payments history{% endblock %}

{% block body %}
    <table class="table table-striped table-hover table-sm ">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Время</th>
            <th scope="col">Сумма</th>
            <th scope="col">Карта</th>
            <th scope="col">Владелец</th>
            <th scope="col">Комментарий</th>
        </tr>
        </thead>
        <tbody>

        {% for order in orders %}
            <tr>
                <th scope="row">{{ order.id }}</th>
                <td>{{ order.createdDate|date('Y-m-d H:i:s') }}</td>
                <td>{{ order.cost }} {{ order.currency }}</td>
                <td class="pad">{{ order.card.pad}}</td>
                <td>{{ order.card.cardholder }}</td>
                <td>{{ order.comment }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}


{% block javascripts %}
<script src="/jquery.mask.min.js"></script>
    <script>
    $pads = $('.pad');
    $pads.mask('0000 0000 0000 0000000');
    </script>
{% endblock %}